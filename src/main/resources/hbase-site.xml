<configuration>
	<!--线下用master-->
	<property>
		<name>hbase.master</name>
		<value>hadoop01:60000</value>
	</property>
	<property>
		<name>hbase.zookeeper.quorum</name>
		<!--<value>nb1:2181,nb2:2181,nb3:2181</value>-->
		<value>hadoop02:2181,hadoop03:2181,hadoop01:2181</value>
	</property>
	<property>
		<name>hbase.zookeeper.property.clientPort</name>
		<value>2181</value>
	</property>
	<property>
		<name>hbase.zookeeper.property.dataDir</name>
		<value>/data/hadoop/data/zk</value>
	</property>
	<property>
		<name>hbase.rootdir</name>
		<!--<value>hdfs://nb2:9000/hbase</value>-->
		<value>hdfs://hadoop01:8020/hbase,hdfs://hadoop02:8020/hbase</value>
	</property>
	<property>
		<name>hbase.cluster.distributed</name>
		<value>true</value>
	</property>
<property>
        <name>hbase.master.maxclockskew</name>
        <value>180000</value>
        <description>Time difference of regionserver from master</description>
 </property>
</configuration>
